{
  "include": ["src", "tests", ".dumi/**/*", ".dumirc.ts", "*.ts", "docs"],
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["vitest/globals"],
    "paths": {
      "@@/*": [".dumi/tmp/*"]
    }
  }
}
